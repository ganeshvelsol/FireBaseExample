<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#c4c4c4"
                android:width="1dp"/>
            <solid
                android:color="#ffffff"/>
            <corners
                android:radius="5dp"/>
            <size
                android:width="500dp"
                android:height="50dp"/>
        </shape>
    </item>
    <item
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size
                android:width="500dp"
                android:height="45dp"/>
            <solid
                android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>